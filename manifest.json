{
  "name": "Yaq",
  "description": "Browser extension to do LLM stuff",
  "version": "1.1.1",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Yaq",
    "default_icon": {
      "16": "assets/icon.png",
      "48": "assets/icon48.png"
    }
  },
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon48.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+M"
      },
      "description": "Open the Yaq popup"
    },
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Alt+Shift+M"
      },
      "description": "Open the Yaq sidebar"
    }
  },
  "sidebar_action": {
    "default_title": "Yaq",
    "default_panel": "popup.html",
    "default_icon": "assets/icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "yaq-extension@meain.io"
    }
  }
}
